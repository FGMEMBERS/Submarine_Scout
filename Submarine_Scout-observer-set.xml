<!--
  Usage: fgfs - -prop:/sim/remote/pilot-callsign="callsign" - -aircraft=Submarine_Scout-observer
-->
<PropertyList>

 <sim>

  <description>Submarine Scout airship multiplayer observer</description>
  <author>Anders Gidenstam</author>
  <status>experimental</status>
  <aircraft-version>$Id$</aircraft-version>

  <flight-model>null</flight-model>

  <model>
   <path>Aircraft/Submarine_Scout/Models/Submarine_Scout-observer.xml</path>
  </model>

  <presets>
   <onground>true</onground>
  </presets>

  <view n="0">
   <name>W/T operator</name>
   <type>lookfrom</type>
   <internal type="bool">true</internal>
   <config>
    <from-model type="bool">false</from-model>
    <from-model-idx type="int">0</from-model-idx>
    <eye-lat-deg-path>/position/latitude-deg</eye-lat-deg-path>
    <eye-lon-deg-path>/position/longitude-deg</eye-lon-deg-path>
    <eye-alt-ft-path>/position/altitude-ft</eye-alt-ft-path>
    <eye-heading-deg-path>/orientation/heading-deg</eye-heading-deg-path>
    <eye-pitch-deg-path>/orientation/pitch-deg</eye-pitch-deg-path>
    <eye-roll-deg-path>/orientation/roll-deg</eye-roll-deg-path>

    <!-- x/y/z == right/up/back -->
    <x-offset-m type="double"> 0.05 </x-offset-m>
    <y-offset-m type="double"> 0.40 </y-offset-m>
    <z-offset-m type="double"> 1.4 </z-offset-m>
    <ground-level-nearplane-m type="double"> 0.1f </ground-level-nearplane-m>
   </config>
  </view>

  <sound>
   <audible>false</audible>
   <path/>
  </sound>

  <systems>
   <electrical>
    <path/>
   </electrical>
  </systems>
  <instrumentation>
   <path/>
  </instrumentation>

  <menubar>
   <default>
    <menu n="100">
     <label>Submarine Scout</label>
     <item>
      <label>Select MP-pilot</label>
      <binding>
       <command>nasal</command>
       <script>
        dual_control_tools.
          copilot_dialog.show(aircraft_dual_control.pilot_type);
       </script>
      </binding>
     </item>
    </menu>
   </default>
  </menubar>

 </sim>

 <nasal>
  <dual_control_tools>
   <file>Aircraft/ZLT-NT/DualControl/dual-control-tools.nas</file>
  </dual_control_tools>
  <aircraft_dual_control>
   <file>Aircraft/Submarine_Scout/Systems/submarine-scout-dual-control.nas</file>
  </aircraft_dual_control>
  <dual_control>
   <file>Aircraft/ZLT-NT/DualControl/copilot-dual-control.nas</file>
  </dual_control>
 </nasal>

</PropertyList>
