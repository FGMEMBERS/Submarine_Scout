<PropertyList>

 <path>manometer.ac</path>

 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m> 0.00 </x-m>
  <y-m> 0.00 </y-m>
  <z-m> 0.00 </z-m>
 </offsets>

 <!--
  %% Animation factors.
  r1 = 0.007; % m
  r2 = 0.005; % m
  psf2Pa=47.880257;
  m2cm = 100;
  c_outer = 1/(1+(r1^2 - r2^2)/r2^2) / (1000*9.81) * psf2Pa * m2cm
  c_inner = 1/(1+r2^2/(r1^2 - r2^2)) / (1000*9.81) * psf2Pa * m2cm
 -->

 <animation>
  <type>scale</type>
  <object-name>inner_liquid</object-name>
  <property>fdm/jsbsim/instrumentation/ballonet-pressure-psf[1]</property>
  <x-factor>0.0</x-factor>
  <x-offset>1.0</x-offset>  
  <y-factor>0.0</y-factor>
  <y-offset>1.0</y-offset>  
  <z-factor>0.23906</z-factor>
  <z-offset>5.0</z-offset>  
  <center>
   <x-m>   0.00 </x-m>
   <y-m>   0.00 </y-m>
   <z-m>  -0.05 </z-m>
  </center>
 </animation>
 <animation>
  <type>scale</type>
  <object-name>outer_liquid</object-name>
  <property>fdm/jsbsim/instrumentation/ballonet-pressure-psf[1]</property>
  <x-factor>0.0</x-factor>
  <x-offset>1.0</x-offset>  
  <y-factor>0.0</y-factor>
  <y-offset>1.0</y-offset>  
  <z-factor>-0.24902</z-factor>
  <z-offset>5.0</z-offset>  
  <center>
   <x-m>   0.00 </x-m>
   <y-m>   0.00 </y-m>
   <z-m>  -0.05 </z-m>
  </center>
 </animation>

</PropertyList>
